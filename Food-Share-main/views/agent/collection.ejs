<main class="d-flex">
  <%- include('../partials/agentSidebar') %>

  <div id="main-wrapper" class="flex-grow-1">

    <!-- Header -->
    <div class="bg-white shadow-sm p-3 d-flex align-items-center">
      <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
      <h5 class="m-0 text-primary">Collection Details</h5>
    </div>

    <!-- Collection Info Card -->
    <div class="container my-4">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">

          <div class="row mb-3">
            <div class="col-md-6">
              <strong>Donor Name:</strong>
              <p><%= collection.donor.firstName + " " + collection.donor.lastName %></p>
            </div>
            <div class="col-md-6">
              <strong>Food Type:</strong>
              <p><%= collection.foodType %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <strong>Quantity:</strong>
              <p><%= collection.quantity %></p>
            </div>
            <div class="col-md-6">
              <strong>Time of Cooking:</strong>
              <p><%= collection.cookingTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <strong>Collection Address:</strong>
              <p><%= collection.address %></p>
            </div>
            <div class="col-md-6">
              <strong>Contact Phone:</strong>
              <p><%= collection.phone %></p>
            </div>
          </div>

          <div class="mb-3">
            <strong>Status:</strong>
            <span class="badge bg-<%= collection.status === 'collected' ? 'success' : 'warning' %> text-uppercase">
              <%= collection.status %>
            </span>
          </div>

          <% if(collection.status === "assigned" && collection.adminToAgentMsg) { %>
            <div class="mb-3">
              <strong>Message from Admin:</strong>
              <div class="alert alert-info mt-2"><%= collection.adminToAgentMsg %></div>
            </div>
          <% } %>

          <% if(collection.status === "collected") { %>
            <div class="mb-3">
              <strong>Collection Time:</strong>
              <p><%= collection.collectionTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></p>
            </div>
          <% } %>

        </div>
      </div>
    </div>

  </div>
</main>
