<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User Login</title>

  <style>
    /* Basic page setup */
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #74ebd5, #9face6);
      color: #333;
      overflow-x: hidden;
    }

    .bg-img-2 {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 15px;
    }

    /* Form animation on load */
    .trbg {
      animation: fadeSlideIn 0.8s ease-out forwards;
      opacity: 0;
      transform: translateY(20px);
    }

    @keyframes fadeSlideIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    form.trbg {
      background: rgba(255, 255, 255, 0.95);
      padding: 2.5rem 2rem;
      border-radius: 20px;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
      max-width: 420px;
      width: 100%;
      border: 2px solid #ffffff70;
      backdrop-filter: blur(6px);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    form.trbg:hover {
      transform: translateY(-5px);
      box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
    }

    form.trbg h3 {
      margin-bottom: 2rem;
      font-weight: 700;
      color: #2c3e50;
      font-size: 1.8rem;
      text-align: center;
    }

    label.form-label {
      display: block;
      margin-bottom: 0.4rem;
      font-weight: 600;
      font-size: 0.95rem;
      color: #34495e;
    }

    input.form-control {
      width: 100%;
      padding: 0.7rem 0.9rem;
      font-size: 1rem;
      border: 1.5px solid #ccd6f6;
      border-radius: 12px;
      margin-bottom: 1.25rem;
      background-color: #f9f9ff;
      color: #333;
      transition: all 0.3s ease;
    }

    input.form-control:focus {
      border-color: #5c6ac4;
      box-shadow: 0 0 10px rgba(92, 106, 196, 0.35);
      background-color: #fff;
      transform: scale(1.02);
    }

    .password-field {
      position: relative;
      display: flex;
      align-items: center;
    }

    .password-field input {
      padding-right: 2.5rem;
      margin-bottom: 0;
    }

    .toggle-password {
      position: absolute;
      right: 12px;
      cursor: pointer;
      font-size: 1.2rem;
      color: #5c6ac4;
      user-select: none;
      transition: color 0.3s ease;
    }

    .toggle-password:hover {
      color: #3b4cc0;
    }

    .form-check {
      display: flex;
      align-items: center;
      margin-top: 1rem;
      margin-bottom: 1rem;
      font-size: 0.95rem;
      color: #333;
    }

    .form-check input {
      margin-right: 0.5rem;
      transform: scale(1.2);
      accent-color: #5c6ac4;
      transition: transform 0.2s ease;
    }

    .form-check input:active {
      transform: scale(1.4);
    }

    button.btn {
      width: 100%;
      padding: 0.85rem;
      font-size: 1.1rem;
      color: #fff;
      background: linear-gradient(to right, #5c6ac4, #6a82fb);
      border: none;
      border-radius: 12px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
      margin-top: 0.5rem;
    }

    button.btn:hover {
      background: linear-gradient(to right, #4b5ac0, #5e72f2);
      transform: scale(1.02);
      box-shadow: 0 6px 16px rgba(92, 106, 196, 0.3);
    }

    .signup-text {
      margin-top: 1.5rem;
      text-align: center;
      font-size: 0.95rem;
      color: #333;
    }

    .signup-text a {
      color: #5c6ac4;
      font-weight: 600;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .signup-text a:hover {
      text-decoration: underline;
      color: #3b4cc0;
    }

    @media (max-width: 480px) {
      form.trbg {
        padding: 1.8rem;
        max-width: 100%;
      }

      form.trbg h3 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="bg-img-2">
    <form action="/auth/login" method="POST" class="trbg" style="min-width: 320px;">
      <h3>User Login</h3>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Enter email.." required autofocus>
      </div>

      <div class="mb-3 password-wrapper">
        <label for="password" class="form-label">Password</label>
        <div class="password-field">
          <input type="password" name="password" class="form-control" id="password" placeholder="Enter password.." required>
          <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
        </div>
      </div>

      <div class="form-check">
        <input type="checkbox" id="remember" name="remember" />
        <label for="remember">Remember Me</label>
      </div>

      <button type="submit" class="btn">Login</button>

      <div class="signup-text">
        <span>Don't have an account? </span>
        <a href="/auth/signup">Signup here</a>
      </div>
    </form>
  </div>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      const toggleIcon = document.querySelector(".toggle-password");
      const isPassword = passwordInput.type === "password";

      passwordInput.type = isPassword ? "text" : "password";
      toggleIcon.textContent = isPassword ? "üôà" : "üëÅÔ∏è";
    }
  </script>
</body>
</html>