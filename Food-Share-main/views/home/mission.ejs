<section style="max-width: 700px; margin: 40px auto; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
  <h1 class="color-theme" style="font-weight: 700; font-size: 3rem; text-align: center; position: relative; margin-bottom: 1rem; cursor: default;">
    Our Mission
    <span style="
      display: block;
      width: 80px;
      height: 4px;
      background: linear-gradient(90deg, #ffbb00, #ffaa00);
      margin: 0.5rem auto 0;
      border-radius: 2px;
      transition: width 0.4s ease;
    "></span>
  </h1>

  <div class="mission-card" style="
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(255, 187, 0, 0.15);
    padding: 30px 25px;
    text-align: center;
    color: #444;
    line-height: 1.6;
    font-size: 1.2rem;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s ease;
  ">
    <img src="https://img.icons8.com/emoji/64/000000/bread-emoji.png" alt="Bread Icon" style="margin-bottom: 15px;"/>
    <p>
      Our mission is simple but powerful â€” to ensure that <strong>no one goes to sleep hungry</strong>. 
      We are committed to <em>feeding the needy</em> by providing nutritious meals and resources, creating a world where every plate is full and every heart is hopeful.
    </p>

    <div style="margin: 25px 0;">
      <h5 style="margin-bottom: 10px; color: #ffaa00;">Meals Served This Year</h5>
      <div style="background: #ffe799; border-radius: 15px; height: 24px; overflow: hidden; max-width: 400px; margin: 0 auto; box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);">
        <div id="progressBar" style="
          height: 100%;
          width: 0;
          background: linear-gradient(90deg, #ffaa00, #ffbb00);
          border-radius: 15px;
          transition: width 2.5s ease;
        "></div>
      </div>
      <span id="progressText" style="display:block; margin-top: 8px; font-weight: 600; color: #b36e00;">0 / 100,000</span>
    </div>

    <button onclick="alert('Thank you for your support! Together, we can make a difference.')" 
            style="
              background: #ffaa00;
              border: none;
              color: white;
              padding: 12px 30px;
              border-radius: 30px;
              cursor: pointer;
              font-size: 1rem;
              font-weight: 600;
              box-shadow: 0 5px 15px rgba(255, 170, 0, 0.4);
              transition: background-color 0.3s ease;
            "
            onmouseover="this.style.backgroundColor='#ffbb33';"
            onmouseout="this.style.backgroundColor='#ffaa00';">
      Support Our Cause
    </button>
  </div>
</section>

<script>
  // Animate fade in when visible
  function fadeInOnScroll() {
    const card = document.querySelector('.mission-card');
    const rect = card.getBoundingClientRect();
    if(rect.top < window.innerHeight) {
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }
  }

  window.addEventListener('scroll', fadeInOnScroll);
  window.addEventListener('load', () => {
    fadeInOnScroll();

    // Animate progress bar fill
    const progressBar = document.getElementById('progressBar');
    const progressText = document.getElementById('progressText');
    let current = 0;
    const target = 100000;
    const animationDuration = 2500; // in ms
    const stepTime = 20;
    const steps = animationDuration / stepTime;
    const increment = target / steps;

    function animateProgress() {
      current += increment;
      if (current > target) current = target;
      progressBar.style.width = (current / target * 100) + '%';
      progressText.textContent = `${Math.floor(current).toLocaleString()} / 100,000`;
      if (current < target) {
        setTimeout(animateProgress, stepTime);
      }
    }
    animateProgress();
  });
</script>
